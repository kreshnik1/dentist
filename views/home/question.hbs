             {{#each todos}}
                <div class="row ">
                    <div class="col col-1">
                        {{#if comment_correct}}
                            <div class="correctAnswer">
                                <i class="material-icons correct_answer" data-toggle="tooltip" data-placement="top" title="The question owner accepted this as correct answer">
                                            done
                                </i>
                            </div>
                        {{/if}}
                    </div>
                <div class="col col-lg-9">
                    <div class="alert comments"  role="alert">
                        {{{comment_content}}}
                         <ul class="list-inline commentDate">
                                <li> {{comment_date}}</li>
                            </ul>
                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-2 pb-2  border-bottom"></div>
                            <div class="subcomments">
                                </hr>
                                <ul class="list-group list-group-flush">
                                    {{#each subComment}}
                                        {{#is subcomment_commentId ../comment_id }} 
                                            <li class="list-group-item subcomment_view"> 
                                                {{{subcomment_content}}}-
                                                <span class="badge badge-primary">{{subcomment_username}}</span>
                                                 <span class="subcommentDate">{{subcomment_date}}</span>
                                            </li>
                                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center border-bottom "></div> 

