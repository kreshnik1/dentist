                    <h6 class="answer"></h6>
    			</div>
                <div class="col col-lg-9 questionCode">
                    <div class="alert alert-light" role="alert">
                        {{{content}}}
                    </div>
                    <div class="alert alert-light catey" role="alert">
                        <ul class="list-inline">
                            {{#each tags}}
                                {{#if this}}
                                    <li>
                                        <button type="button" class="btn btn-outline-dark btn-sm">{{this}}</button>
                                    </li>
                                {{/if}}
                            {{/each}}
                            <li class="time_right">
                                    {{data}}
                            </li>
                        </ul>
					</div>
                </div>
                <div class="col col-2">
                    <button type="button" class="btn btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Asked by : {{username}} ">
