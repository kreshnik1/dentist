                        <div class="sk-circle11 sk-circle"></div>
                        <div class="sk-circle12 sk-circle"></div>
                    </div>
                </div>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            {{>flash}}

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Profili im</h1>
            </div>
            <div class="card">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="card text-center text-white bg-primary mb-3" >
                            <div class="card-body">
                                <h2 class="card-title username">{{username}}<h2>
                            </div>
                            <button type="button" class="btn btn-secondary card-link" data-toggle="modal" data-target="#exampleModalCenter">
                                <i data-feather="edit-2"></i>Ndrysho profilin tënd
                            </button>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card-body">
                            <h2>{{firstname}}  {{surname}}</h2>
                            <p class="card-text">{{email}}</p>
                            <a href="#"data-toggle="modal" data-target="#ChangePasswordModal" class="card-link">Ndysho fjalëkalimin</a>
                        </div>
                    </div>
                </div>
			</div>


            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Ndrysho profilin tënd</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form action="/home/profile/{{id}}"  id="update" method="post">
                            <div class="modal-body">
                                <input type="hidden" name="_csrf" value="{{ csrftoken }}" />
                                <div class="form-group row">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Username</label>
                                    <div class="col-sm-10">
                                        <input type="text" readonly class="form-control-plaintext" id="staticEmail" name="username" value="{{username}}" >
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Emri</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputFirstName" name="name" value="{{firstname}}" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Mbiemri</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputLastName" name="surname" value="{{surname}}" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label" >Emaili</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" id="inputEmail" name="email" value="{{email}}" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Firma</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputCompanyName" name="companyName" value="{{companyName}}" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Tel</label>
                                    <div class="col-sm-10">
                                        <input type="tel" class="form-control" id="inputPhoneNumber" name="phoneNumber" value="{{this.phoneNumber}}" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Qyteti</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputCity" name="city" value="{{city}}" required>
                                    </div>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Mbyll</button>
                                <button type="submit" value="submit" form="update" class="btn btn-primary">Ruaj ndryshimet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="ChangePasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Ndrysho fjalëkalimin</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form action="/home/profile/password/{{id}}"  id="change" method="post" class="needs-validation">
                            <div class="modal-body">
                                <input type="hidden" name="_csrf" value="{{ csrftoken }}" />
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Fjalëkalimi i vjetër</label>
                                    <input type="password" class="form-control" name="oldpassword"  aria-describedby="emailHelp" placeholder="Fjalëkalimi i vjetër" required>
                                    <div class="invalid-feedback">
                                      Fjalëkalimi i vjetër duhet të jetë së paku 6 karaktere.
                                    </div>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">New password</label>
                                    <input type="password" class="form-control" name="newpassword" placeholder="Fjalëkalimi i ri" required>
                                     <div class="invalid-feedback">
                                        Fjalëkalimi i ri duhet të jetë së paku 6 karaktere.
                                    </div>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Rishkruaj fjalëkalimin e ri</label>
                                    <input type="password" class="form-control" name="repassword"  placeholder="Rishkruaj fjalëkalimin e ri" required>
                                     <div class="invalid-feedback repassword_feedback">
                                           Fjalëkalimi i ri duhet të jetë së paku 6 karaktere.
                                    </div>
                                    <div class="valid-feedback ">
                                        Looks good!
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Mbyll</button>
                                <button type="submit" value="submit" form="change" class="btn btn-primary passwordButton" disabled>Ndrysho</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
